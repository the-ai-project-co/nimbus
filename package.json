{
  "name": "nimbus",
  "version": "0.1.0",
  "private": true,
  "description": "AI-Powered Cloud Engineering Agent",
  "workspaces": [
    "services/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "./scripts/start-all.sh",
    "health": "./scripts/check-health.sh",
    "setup": "./scripts/dev-setup.sh",
    "clean": "./scripts/clean.sh",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "bun run --filter '*' type-check",
    "build": "bun run --filter '*' build",
    "build:cli": "cd services/cli-service && bun run build",
    "build:binary": "./scripts/build-binary.sh",
    "build:binary:all": "./scripts/build-binary.sh all",
    "precommit": "bun run lint && bun run format:check && bun run type-check"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/websocket": "^0.2.8",
    "elysia": "^1.4.22"
  }
}
