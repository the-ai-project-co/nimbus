{
  "name": "@astron/nimbus",
  "version": "0.2.0",
  "description": "AI-Powered Cloud Engineering Agent",
  "main": "src/nimbus.ts",
  "bin": {
    "nimbus": "bin/nimbus"
  },
  "files": [
    "bin/",
    "src/",
    "package.json",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "bun test src/__tests__/",
    "test:coverage": "bun test src/__tests__/ --coverage --coverage-reporter=lcov --coverage-reporter=text --coverage-threshold=80",
    "test:watch": "bun test src/__tests__/ --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "bun tsc --noEmit",
    "build": "bun src/build.ts",
    "build:binary": "./scripts/build-binary.sh",
    "build:binary:all": "./scripts/build-binary.sh all",
    "nimbus": "bun src/nimbus.ts",
    "precommit": "bun run lint && bun run format:check && bun run type-check"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/bun": "latest",
    "@types/react": "^19.2.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@aws-sdk/client-bedrock-runtime": "^3.995.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/websocket": "^0.2.8",
    "@google/generative-ai": "^0.24.1",
    "elysia": "^1.4.22",
    "fast-glob": "^3.3.3",
    "gpt-tokenizer": "^3.4.0",
    "ink": "^6.8.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "openai": "^6.22.0",
    "react": "^19.2.4",
    "simple-git": "^3.32.1",
    "better-sqlite3": "^11.0.0",
    "tsx": "^4.7.0",
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "@azure/identity": "^4.0.0",
    "@azure/arm-compute": "^22.0.0",
    "@azure/arm-storage": "^18.0.0",
    "@azure/arm-containerservice": "^21.0.0",
    "@azure/arm-network": "^33.0.0",
    "google-auth-library": "^9.0.0",
    "@google-cloud/compute": "^4.0.0",
    "@google-cloud/storage": "^7.0.0",
    "@google-cloud/container": "^5.0.0",
    "@octokit/rest": "^21.0.0"
  }
}
