# VPC Configuration for {{project_name}}
# Provider: AWS
# Component: VPC
# Generated by Nimbus Generator Service

terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

# VPC
resource "aws_vpc" "main" {
  cidr_block           = "{{vpc_cidr}}"
  enable_dns_hostnames = {{enable_dns_hostnames}}
  enable_dns_support   = {{enable_dns_support}}

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-vpc"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

# Internet Gateway
resource "aws_internet_gateway" "main" {
  vpc_id = aws_vpc.main.id

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-igw"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

{{#if create_nat_gateway}}
# Elastic IP for NAT Gateway
resource "aws_eip" "nat" {
  count  = {{nat_gateway_count}}
  domain = "vpc"

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-nat-eip-${count.index + 1}"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}

  depends_on = [aws_internet_gateway.main]
}

# NAT Gateway
resource "aws_nat_gateway" "main" {
  count         = {{nat_gateway_count}}
  allocation_id = aws_eip.nat[count.index].id
  subnet_id     = aws_subnet.public[count.index].id

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-nat-${count.index + 1}"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}

  depends_on = [aws_internet_gateway.main]
}
{{/if}}

# Public Subnets
resource "aws_subnet" "public" {
  count                   = {{public_subnet_count}}
  vpc_id                  = aws_vpc.main.id
  cidr_block              = {{cidr_subnet vpc_cidr count.index 8}}
  availability_zone       = data.aws_availability_zones.available.names[count.index]
  map_public_ip_on_launch = true

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name                                           = "{{project_name}}-public-${count.index + 1}"
    Environment                                    = "{{environment}}"
    "kubernetes.io/role/elb"                      = "1"
    "kubernetes.io/cluster/{{project_name}}-eks"  = "shared"
    ManagedBy                                      = "Terraform"
  }{{/if}}
}

# Private Subnets
resource "aws_subnet" "private" {
  count             = {{private_subnet_count}}
  vpc_id            = aws_vpc.main.id
  cidr_block        = {{cidr_subnet vpc_cidr (add public_subnet_count count.index) 8}}
  availability_zone = data.aws_availability_zones.available.names[count.index]

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name                                           = "{{project_name}}-private-${count.index + 1}"
    Environment                                    = "{{environment}}"
    "kubernetes.io/role/internal-elb"             = "1"
    "kubernetes.io/cluster/{{project_name}}-eks"  = "shared"
    ManagedBy                                      = "Terraform"
  }{{/if}}
}

# Public Route Table
resource "aws_route_table" "public" {
  vpc_id = aws_vpc.main.id

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-public-rt"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

# Public Route
resource "aws_route" "public_internet_gateway" {
  route_table_id         = aws_route_table.public.id
  destination_cidr_block = "0.0.0.0/0"
  gateway_id             = aws_internet_gateway.main.id
}

# Public Route Table Association
resource "aws_route_table_association" "public" {
  count          = {{public_subnet_count}}
  subnet_id      = aws_subnet.public[count.index].id
  route_table_id = aws_route_table.public.id
}

# Private Route Table
resource "aws_route_table" "private" {
  count  = {{#if single_nat_gateway}}1{{else}}{{private_subnet_count}}{{/if}}
  vpc_id = aws_vpc.main.id

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-private-rt-${count.index + 1}"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

{{#if create_nat_gateway}}
# Private Route to NAT Gateway
resource "aws_route" "private_nat_gateway" {
  count                  = {{#if single_nat_gateway}}1{{else}}{{private_subnet_count}}{{/if}}
  route_table_id         = aws_route_table.private[count.index].id
  destination_cidr_block = "0.0.0.0/0"
  nat_gateway_id         = {{#if single_nat_gateway}}aws_nat_gateway.main[0].id{{else}}aws_nat_gateway.main[count.index].id{{/if}}
}
{{/if}}

# Private Route Table Association
resource "aws_route_table_association" "private" {
  count          = {{private_subnet_count}}
  subnet_id      = aws_subnet.private[count.index].id
  route_table_id = {{#if single_nat_gateway}}aws_route_table.private[0].id{{else}}aws_route_table.private[count.index].id{{/if}}
}

# Data source for availability zones
data "aws_availability_zones" "available" {
  state = "available"
}

# VPC Flow Logs (optional, for security monitoring)
{{#if enable_flow_logs}}
resource "aws_flow_log" "main" {
  iam_role_arn    = aws_iam_role.flow_logs.arn
  log_destination = aws_cloudwatch_log_group.flow_logs.arn
  traffic_type    = "ALL"
  vpc_id          = aws_vpc.main.id

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-flow-logs"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_cloudwatch_log_group" "flow_logs" {
  name              = "/aws/vpc/{{project_name}}-flow-logs"
  retention_in_days = {{flow_logs_retention_days}}

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-flow-logs"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_iam_role" "flow_logs" {
  name = "{{project_name}}-vpc-flow-logs-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "vpc-flow-logs.amazonaws.com"
        }
      }
    ]
  })

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-flow-logs-role"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_iam_role_policy" "flow_logs" {
  name = "{{project_name}}-vpc-flow-logs-policy"
  role = aws_iam_role.flow_logs.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = [
          "logs:CreateLogGroup",
          "logs:CreateLogStream",
          "logs:PutLogEvents",
          "logs:DescribeLogGroups",
          "logs:DescribeLogStreams"
        ]
        Effect = "Allow"
        Resource = "*"
      }
    ]
  })
}
{{/if}}

# Outputs
output "vpc_id" {
  description = "The ID of the VPC"
  value       = aws_vpc.main.id
}

output "vpc_cidr_block" {
  description = "The CIDR block of the VPC"
  value       = aws_vpc.main.cidr_block
}

output "public_subnet_ids" {
  description = "List of IDs of public subnets"
  value       = aws_subnet.public[*].id
}

output "private_subnet_ids" {
  description = "List of IDs of private subnets"
  value       = aws_subnet.private[*].id
}

output "public_subnet_cidr_blocks" {
  description = "List of CIDR blocks of public subnets"
  value       = aws_subnet.public[*].cidr_block
}

output "private_subnet_cidr_blocks" {
  description = "List of CIDR blocks of private subnets"
  value       = aws_subnet.private[*].cidr_block
}

{{#if create_nat_gateway}}
output "nat_gateway_ids" {
  description = "List of NAT Gateway IDs"
  value       = aws_nat_gateway.main[*].id
}

output "nat_gateway_public_ips" {
  description = "List of public IPs associated with NAT Gateways"
  value       = aws_eip.nat[*].public_ip
}
{{/if}}

output "internet_gateway_id" {
  description = "The ID of the Internet Gateway"
  value       = aws_internet_gateway.main.id
}
