# ECS Fargate Configuration for {{project_name}}
# Provider: AWS
# Component: ECS (Fargate)
# Generated by Nimbus Generator Service

terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

# Data sources
data "aws_caller_identity" "current" {}
data "aws_region" "current" {}

# ECS Cluster
resource "aws_ecs_cluster" "main" {
  name = "{{project_name}}-cluster"

  setting {
    name  = "containerInsights"
    value = "{{#if enable_container_insights}}enabled{{else}}disabled{{/if}}"
  }

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-cluster"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

# ECS Cluster Capacity Providers
resource "aws_ecs_cluster_capacity_providers" "main" {
  cluster_name = aws_ecs_cluster.main.name

  capacity_providers = ["FARGATE", "FARGATE_SPOT"]

  default_capacity_provider_strategy {
    base              = 1
    weight            = 100
    capacity_provider = "FARGATE"
  }
}

# CloudWatch Log Group for ECS
resource "aws_cloudwatch_log_group" "ecs" {
  name              = "/ecs/{{project_name}}/{{service_name}}"
  retention_in_days = {{log_retention_days}}

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-ecs-logs"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

# ECS Task Execution Role
resource "aws_iam_role" "ecs_task_execution" {
  name = "{{project_name}}-ecs-task-execution-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "ecs-tasks.amazonaws.com"
        }
      }
    ]
  })

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-ecs-task-execution-role"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_iam_role_policy_attachment" "ecs_task_execution_policy" {
  role       = aws_iam_role.ecs_task_execution.name
  policy_arn = "arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy"
}

{{#if enable_ecr_access}}
resource "aws_iam_role_policy_attachment" "ecs_task_execution_ecr" {
  role       = aws_iam_role.ecs_task_execution.name
  policy_arn = "arn:aws:iam::aws:policy/AmazonEC2ContainerRegistryReadOnly"
}
{{/if}}

# ECS Task Role (for application-level AWS API access)
resource "aws_iam_role" "ecs_task" {
  name = "{{project_name}}-ecs-task-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "ecs-tasks.amazonaws.com"
        }
      }
    ]
  })

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-ecs-task-role"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

{{#if enable_exec_command}}
# Policy for ECS Exec (for debugging)
resource "aws_iam_role_policy" "ecs_task_exec_command" {
  name = "{{project_name}}-ecs-exec-command"
  role = aws_iam_role.ecs_task.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = [
          "ssmmessages:CreateControlChannel",
          "ssmmessages:CreateDataChannel",
          "ssmmessages:OpenControlChannel",
          "ssmmessages:OpenDataChannel"
        ]
        Effect   = "Allow"
        Resource = "*"
      }
    ]
  })
}
{{/if}}

# ECS Task Definition
resource "aws_ecs_task_definition" "main" {
  family                   = "{{project_name}}-{{service_name}}"
  network_mode             = "awsvpc"
  requires_compatibilities = ["FARGATE"]
  cpu                      = "{{cpu}}"
  memory                   = "{{memory}}"
  execution_role_arn       = aws_iam_role.ecs_task_execution.arn
  task_role_arn            = aws_iam_role.ecs_task.arn

  container_definitions = jsonencode([
    {
      name      = "{{service_name}}"
      image     = "{{container_image}}"
      essential = true

      portMappings = [
        {
          containerPort = {{container_port}}
          hostPort      = {{container_port}}
          protocol      = "tcp"
        }
      ]

      logConfiguration = {
        logDriver = "awslogs"
        options = {
          "awslogs-group"         = aws_cloudwatch_log_group.ecs.name
          "awslogs-region"        = data.aws_region.current.name
          "awslogs-stream-prefix" = "ecs"
        }
      }

      {{#if environment_variables}}
      environment = [
        {{#each environment_variables}}
        {
          name  = "{{this.name}}"
          value = "{{this.value}}"
        },
        {{/each}}
      ]
      {{/if}}

      {{#if health_check_command}}
      healthCheck = {
        command     = ["CMD-SHELL", "{{health_check_command}}"]
        interval    = 30
        timeout     = 5
        retries     = 3
        startPeriod = 60
      }
      {{/if}}
    }
  ])

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-{{service_name}}-task"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

# ALB Security Group
resource "aws_security_group" "alb" {
  name        = "{{project_name}}-alb-sg"
  description = "Security group for {{project_name}} Application Load Balancer"
  vpc_id      = var.vpc_id

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-alb-sg"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_security_group_rule" "alb_ingress_http" {
  type              = "ingress"
  from_port         = 80
  to_port           = 80
  protocol          = "tcp"
  cidr_blocks       = ["0.0.0.0/0"]
  security_group_id = aws_security_group.alb.id
  description       = "Allow HTTP inbound traffic"
}

resource "aws_security_group_rule" "alb_ingress_https" {
  type              = "ingress"
  from_port         = 443
  to_port           = 443
  protocol          = "tcp"
  cidr_blocks       = ["0.0.0.0/0"]
  security_group_id = aws_security_group.alb.id
  description       = "Allow HTTPS inbound traffic"
}

resource "aws_security_group_rule" "alb_egress" {
  type              = "egress"
  from_port         = 0
  to_port           = 0
  protocol          = "-1"
  cidr_blocks       = ["0.0.0.0/0"]
  security_group_id = aws_security_group.alb.id
  description       = "Allow all egress traffic"
}

# ECS Tasks Security Group
resource "aws_security_group" "ecs_tasks" {
  name        = "{{project_name}}-ecs-tasks-sg"
  description = "Security group for {{project_name}} ECS Fargate tasks"
  vpc_id      = var.vpc_id

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-ecs-tasks-sg"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_security_group_rule" "ecs_tasks_ingress" {
  type                     = "ingress"
  from_port                = {{container_port}}
  to_port                  = {{container_port}}
  protocol                 = "tcp"
  source_security_group_id = aws_security_group.alb.id
  security_group_id        = aws_security_group.ecs_tasks.id
  description              = "Allow inbound traffic from ALB"
}

resource "aws_security_group_rule" "ecs_tasks_egress" {
  type              = "egress"
  from_port         = 0
  to_port           = 0
  protocol          = "-1"
  cidr_blocks       = ["0.0.0.0/0"]
  security_group_id = aws_security_group.ecs_tasks.id
  description       = "Allow all egress traffic"
}

# Application Load Balancer
resource "aws_lb" "main" {
  name               = "{{project_name}}-alb"
  internal           = {{#if internal_alb}}true{{else}}false{{/if}}
  load_balancer_type = "application"
  security_groups    = [aws_security_group.alb.id]
  subnets            = var.public_subnet_ids

  enable_deletion_protection = {{#if enable_deletion_protection}}true{{else}}false{{/if}}

  {{#if enable_access_logs}}
  access_logs {
    bucket  = "{{access_logs_bucket}}"
    prefix  = "{{project_name}}-alb"
    enabled = true
  }
  {{/if}}

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-alb"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

# ALB Target Group
resource "aws_lb_target_group" "main" {
  name        = "{{project_name}}-tg"
  port        = {{container_port}}
  protocol    = "HTTP"
  vpc_id      = var.vpc_id
  target_type = "ip"

  health_check {
    enabled             = true
    healthy_threshold   = {{healthy_threshold}}
    unhealthy_threshold = {{unhealthy_threshold}}
    interval            = {{health_check_interval}}
    timeout             = {{health_check_timeout}}
    path                = "{{health_check_path}}"
    port                = "traffic-port"
    protocol            = "HTTP"
    matcher             = "{{health_check_matcher}}"
  }

  deregistration_delay = {{deregistration_delay}}

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-tg"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

# ALB Listener (HTTP)
resource "aws_lb_listener" "http" {
  load_balancer_arn = aws_lb.main.arn
  port              = "80"
  protocol          = "HTTP"

  {{#if redirect_http_to_https}}
  default_action {
    type = "redirect"

    redirect {
      port        = "443"
      protocol    = "HTTPS"
      status_code = "HTTP_301"
    }
  }
  {{else}}
  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.main.arn
  }
  {{/if}}

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-http-listener"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

{{#if certificate_arn}}
# ALB Listener (HTTPS)
resource "aws_lb_listener" "https" {
  load_balancer_arn = aws_lb.main.arn
  port              = "443"
  protocol          = "HTTPS"
  ssl_policy        = "{{ssl_policy}}"
  certificate_arn   = "{{certificate_arn}}"

  default_action {
    type             = "forward"
    target_group_arn = aws_lb_target_group.main.arn
  }

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-https-listener"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}
{{/if}}

# ECS Service
resource "aws_ecs_service" "main" {
  name            = "{{project_name}}-{{service_name}}"
  cluster         = aws_ecs_cluster.main.id
  task_definition = aws_ecs_task_definition.main.arn
  desired_count   = {{desired_count}}
  launch_type     = "FARGATE"

  {{#if enable_exec_command}}
  enable_execute_command = true
  {{/if}}

  network_configuration {
    subnets          = var.private_subnet_ids
    security_groups  = [aws_security_group.ecs_tasks.id]
    assign_public_ip = false
  }

  load_balancer {
    target_group_arn = aws_lb_target_group.main.arn
    container_name   = "{{service_name}}"
    container_port   = {{container_port}}
  }

  deployment_configuration {
    maximum_percent         = {{deployment_maximum_percent}}
    minimum_healthy_percent = {{deployment_minimum_healthy_percent}}
  }

  {{#if enable_circuit_breaker}}
  deployment_circuit_breaker {
    enable   = true
    rollback = true
  }
  {{/if}}

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-{{service_name}}-service"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}

  depends_on = [
    aws_lb_listener.http,
    aws_iam_role_policy_attachment.ecs_task_execution_policy,
  ]
}

# Auto Scaling
{{#if enable_autoscaling}}
resource "aws_appautoscaling_target" "ecs" {
  max_capacity       = {{autoscaling_max_capacity}}
  min_capacity       = {{autoscaling_min_capacity}}
  resource_id        = "service/${aws_ecs_cluster.main.name}/${aws_ecs_service.main.name}"
  scalable_dimension = "ecs:service:DesiredCount"
  service_namespace  = "ecs"
}

resource "aws_appautoscaling_policy" "cpu" {
  name               = "{{project_name}}-cpu-scaling"
  policy_type        = "TargetTrackingScaling"
  resource_id        = aws_appautoscaling_target.ecs.resource_id
  scalable_dimension = aws_appautoscaling_target.ecs.scalable_dimension
  service_namespace  = aws_appautoscaling_target.ecs.service_namespace

  target_tracking_scaling_policy_configuration {
    predefined_metric_specification {
      predefined_metric_type = "ECSServiceAverageCPUUtilization"
    }
    target_value       = {{cpu_scaling_target}}
    scale_in_cooldown  = {{scale_in_cooldown}}
    scale_out_cooldown = {{scale_out_cooldown}}
  }
}

resource "aws_appautoscaling_policy" "memory" {
  name               = "{{project_name}}-memory-scaling"
  policy_type        = "TargetTrackingScaling"
  resource_id        = aws_appautoscaling_target.ecs.resource_id
  scalable_dimension = aws_appautoscaling_target.ecs.scalable_dimension
  service_namespace  = aws_appautoscaling_target.ecs.service_namespace

  target_tracking_scaling_policy_configuration {
    predefined_metric_specification {
      predefined_metric_type = "ECSServiceAverageMemoryUtilization"
    }
    target_value       = {{memory_scaling_target}}
    scale_in_cooldown  = {{scale_in_cooldown}}
    scale_out_cooldown = {{scale_out_cooldown}}
  }
}
{{/if}}

# CloudWatch Alarms
{{#if enable_cloudwatch_alarms}}
resource "aws_cloudwatch_metric_alarm" "cpu_high" {
  alarm_name          = "{{project_name}}-ecs-cpu-high"
  comparison_operator = "GreaterThanThreshold"
  evaluation_periods  = "2"
  metric_name         = "CPUUtilization"
  namespace           = "AWS/ECS"
  period              = "300"
  statistic           = "Average"
  threshold           = "80"
  alarm_description   = "ECS service CPU utilization is too high"
  alarm_actions       = {{#if sns_topic_arn}}["{{sns_topic_arn}}"]{{else}}[]{{/if}}

  dimensions = {
    ClusterName = aws_ecs_cluster.main.name
    ServiceName = aws_ecs_service.main.name
  }

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-ecs-cpu-alarm"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_cloudwatch_metric_alarm" "memory_high" {
  alarm_name          = "{{project_name}}-ecs-memory-high"
  comparison_operator = "GreaterThanThreshold"
  evaluation_periods  = "2"
  metric_name         = "MemoryUtilization"
  namespace           = "AWS/ECS"
  period              = "300"
  statistic           = "Average"
  threshold           = "80"
  alarm_description   = "ECS service memory utilization is too high"
  alarm_actions       = {{#if sns_topic_arn}}["{{sns_topic_arn}}"]{{else}}[]{{/if}}

  dimensions = {
    ClusterName = aws_ecs_cluster.main.name
    ServiceName = aws_ecs_service.main.name
  }

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-ecs-memory-alarm"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}
{{/if}}

