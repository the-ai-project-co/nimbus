# S3 Bucket Configuration for {{project_name}}
# Provider: AWS
# Component: S3
# Generated by Nimbus Generator Service

terraform {
  required_version = ">= 1.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

# Data sources
data "aws_caller_identity" "current" {}
data "aws_region" "current" {}

# KMS Key for S3 encryption
resource "aws_kms_key" "s3" {
  description             = "KMS key for {{project_name}} S3 bucket encryption"
  deletion_window_in_days = 10
  enable_key_rotation     = true

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-s3-key"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_kms_alias" "s3" {
  name          = "alias/{{project_name}}-s3"
  target_key_id = aws_kms_key.s3.key_id
}

# S3 Bucket
resource "aws_s3_bucket" "main" {
  bucket = "{{bucket_name}}"

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{bucket_name}}"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

# S3 Bucket Versioning
resource "aws_s3_bucket_versioning" "main" {
  bucket = aws_s3_bucket.main.id

  versioning_configuration {
    status = "{{#if enable_versioning}}Enabled{{else}}Disabled{{/if}}"
    {{#if enable_mfa_delete}}
    mfa_delete = "Enabled"
    {{/if}}
  }
}

# S3 Bucket Server-Side Encryption
resource "aws_s3_bucket_server_side_encryption_configuration" "main" {
  bucket = aws_s3_bucket.main.id

  rule {
    apply_server_side_encryption_by_default {
      {{#if eq encryption_type "AES256"}}
      sse_algorithm = "AES256"
      {{else}}
      sse_algorithm     = "aws:kms"
      kms_master_key_id = aws_kms_key.s3.arn
      {{/if}}
    }
    bucket_key_enabled = true
  }
}

# S3 Bucket Public Access Block
resource "aws_s3_bucket_public_access_block" "main" {
  bucket = aws_s3_bucket.main.id

  block_public_acls       = {{block_public_acls}}
  block_public_policy     = {{block_public_policy}}
  ignore_public_acls      = {{ignore_public_acls}}
  restrict_public_buckets = {{restrict_public_buckets}}
}

# S3 Bucket Logging
{{#if enable_logging}}
resource "aws_s3_bucket" "logs" {
  bucket = "{{bucket_name}}-logs"

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{bucket_name}}-logs"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_s3_bucket_public_access_block" "logs" {
  bucket = aws_s3_bucket.logs.id

  block_public_acls       = true
  block_public_policy     = true
  ignore_public_acls      = true
  restrict_public_buckets = true
}

resource "aws_s3_bucket_server_side_encryption_configuration" "logs" {
  bucket = aws_s3_bucket.logs.id

  rule {
    apply_server_side_encryption_by_default {
      sse_algorithm     = "aws:kms"
      kms_master_key_id = aws_kms_key.s3.arn
    }
    bucket_key_enabled = true
  }
}

resource "aws_s3_bucket_lifecycle_configuration" "logs" {
  bucket = aws_s3_bucket.logs.id

  rule {
    id     = "delete-old-logs"
    status = "Enabled"

    expiration {
      days = {{log_retention_days}}
    }
  }
}

resource "aws_s3_bucket_logging" "main" {
  bucket = aws_s3_bucket.main.id

  target_bucket = aws_s3_bucket.logs.id
  target_prefix = "s3-access-logs/"
}
{{/if}}

# S3 Bucket Lifecycle Configuration
{{#if enable_lifecycle_rules}}
resource "aws_s3_bucket_lifecycle_configuration" "main" {
  bucket = aws_s3_bucket.main.id

  {{#if transition_to_ia_days}}
  rule {
    id     = "transition-to-ia"
    status = "Enabled"

    transition {
      days          = {{transition_to_ia_days}}
      storage_class = "STANDARD_IA"
    }
  }
  {{/if}}

  {{#if transition_to_glacier_days}}
  rule {
    id     = "transition-to-glacier"
    status = "Enabled"

    transition {
      days          = {{transition_to_glacier_days}}
      storage_class = "GLACIER"
    }
  }
  {{/if}}

  {{#if transition_to_deep_archive_days}}
  rule {
    id     = "transition-to-deep-archive"
    status = "Enabled"

    transition {
      days          = {{transition_to_deep_archive_days}}
      storage_class = "DEEP_ARCHIVE"
    }
  }
  {{/if}}

  {{#if expiration_days}}
  rule {
    id     = "expire-old-objects"
    status = "Enabled"

    expiration {
      days = {{expiration_days}}
    }
  }
  {{/if}}

  {{#if enable_versioning}}
  rule {
    id     = "expire-old-versions"
    status = "Enabled"

    noncurrent_version_expiration {
      noncurrent_days = {{noncurrent_version_expiration_days}}
    }

    {{#if noncurrent_version_transition_days}}
    noncurrent_version_transition {
      noncurrent_days = {{noncurrent_version_transition_days}}
      storage_class   = "GLACIER"
    }
    {{/if}}
  }
  {{/if}}

  {{#if abort_incomplete_multipart_days}}
  rule {
    id     = "abort-incomplete-multipart-uploads"
    status = "Enabled"

    abort_incomplete_multipart_upload {
      days_after_initiation = {{abort_incomplete_multipart_days}}
    }
  }
  {{/if}}
}
{{/if}}

# S3 Bucket CORS Configuration
{{#if enable_cors}}
resource "aws_s3_bucket_cors_configuration" "main" {
  bucket = aws_s3_bucket.main.id

  cors_rule {
    allowed_headers = {{tf_list cors_allowed_headers}}
    allowed_methods = {{tf_list cors_allowed_methods}}
    allowed_origins = {{tf_list cors_allowed_origins}}
    expose_headers  = {{tf_list cors_expose_headers}}
    max_age_seconds = {{cors_max_age_seconds}}
  }
}
{{/if}}

# S3 Bucket Policy
resource "aws_s3_bucket_policy" "main" {
  bucket = aws_s3_bucket.main.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {{#if enforce_ssl}}
      {
        Sid    = "DenyInsecureTransport"
        Effect = "Deny"
        Principal = "*"
        Action = "s3:*"
        Resource = [
          aws_s3_bucket.main.arn,
          "${aws_s3_bucket.main.arn}/*"
        ]
        Condition = {
          Bool = {
            "aws:SecureTransport" = "false"
          }
        }
      },
      {{/if}}
      {{#if enforce_encryption}}
      {
        Sid    = "DenyUnencryptedObjectUploads"
        Effect = "Deny"
        Principal = "*"
        Action = "s3:PutObject"
        Resource = "${aws_s3_bucket.main.arn}/*"
        Condition = {
          StringNotEquals = {
            {{#if eq encryption_type "AES256"}}
            "s3:x-amz-server-side-encryption" = "AES256"
            {{else}}
            "s3:x-amz-server-side-encryption" = "aws:kms"
            {{/if}}
          }
        }
      },
      {{/if}}
      {{#if allowed_principals}}
      {
        Sid    = "AllowSpecificPrincipals"
        Effect = "Allow"
        Principal = {
          AWS = {{tf_list allowed_principals}}
        }
        Action = [
          "s3:GetObject",
          "s3:PutObject",
          "s3:DeleteObject",
          "s3:ListBucket"
        ]
        Resource = [
          aws_s3_bucket.main.arn,
          "${aws_s3_bucket.main.arn}/*"
        ]
      }
      {{/if}}
    ]
  })

  depends_on = [aws_s3_bucket_public_access_block.main]
}

# S3 Bucket Notification (Optional - for Lambda/SNS/SQS)
{{#if enable_notifications}}
resource "aws_s3_bucket_notification" "main" {
  bucket = aws_s3_bucket.main.id

  {{#if lambda_notifications}}
  {{#each lambda_notifications}}
  lambda_function {
    lambda_function_arn = "{{this.function_arn}}"
    events              = {{tf_list this.events}}
    {{#if this.filter_prefix}}
    filter_prefix       = "{{this.filter_prefix}}"
    {{/if}}
    {{#if this.filter_suffix}}
    filter_suffix       = "{{this.filter_suffix}}"
    {{/if}}
  }
  {{/each}}
  {{/if}}

  {{#if sqs_notifications}}
  {{#each sqs_notifications}}
  queue {
    queue_arn     = "{{this.queue_arn}}"
    events        = {{tf_list this.events}}
    {{#if this.filter_prefix}}
    filter_prefix = "{{this.filter_prefix}}"
    {{/if}}
    {{#if this.filter_suffix}}
    filter_suffix = "{{this.filter_suffix}}"
    {{/if}}
  }
  {{/each}}
  {{/if}}

  {{#if sns_notifications}}
  {{#each sns_notifications}}
  topic {
    topic_arn     = "{{this.topic_arn}}"
    events        = {{tf_list this.events}}
    {{#if this.filter_prefix}}
    filter_prefix = "{{this.filter_prefix}}"
    {{/if}}
    {{#if this.filter_suffix}}
    filter_suffix = "{{this.filter_suffix}}"
    {{/if}}
  }
  {{/each}}
  {{/if}}
}
{{/if}}

# S3 Bucket Replication (Optional - for Cross-Region Replication)
{{#if enable_replication}}
resource "aws_iam_role" "replication" {
  name = "{{project_name}}-s3-replication-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "s3.amazonaws.com"
        }
      }
    ]
  })

  tags = {{#if tags}}{{tf_map tags}}{{else}}{
    Name        = "{{project_name}}-s3-replication-role"
    Environment = "{{environment}}"
    ManagedBy   = "Terraform"
  }{{/if}}
}

resource "aws_iam_policy" "replication" {
  name = "{{project_name}}-s3-replication-policy"

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = [
          "s3:GetReplicationConfiguration",
          "s3:ListBucket"
        ]
        Effect = "Allow"
        Resource = aws_s3_bucket.main.arn
      },
      {
        Action = [
          "s3:GetObjectVersionForReplication",
          "s3:GetObjectVersionAcl",
          "s3:GetObjectVersionTagging"
        ]
        Effect = "Allow"
        Resource = "${aws_s3_bucket.main.arn}/*"
      },
      {
        Action = [
          "s3:ReplicateObject",
          "s3:ReplicateDelete",
          "s3:ReplicateTags"
        ]
        Effect = "Allow"
        Resource = "{{replication_destination_bucket_arn}}/*"
      }
    ]
  })
}

resource "aws_iam_role_policy_attachment" "replication" {
  role       = aws_iam_role.replication.name
  policy_arn = aws_iam_policy.replication.arn
}

resource "aws_s3_bucket_replication_configuration" "main" {
  bucket = aws_s3_bucket.main.id
  role   = aws_iam_role.replication.arn

  rule {
    id     = "replicate-all"
    status = "Enabled"

    filter {}

    destination {
      bucket        = "{{replication_destination_bucket_arn}}"
      storage_class = "{{replication_storage_class}}"

      encryption_configuration {
        replica_kms_key_id = "{{replication_kms_key_id}}"
      }
    }

    delete_marker_replication {
      status = "Enabled"
    }
  }

  depends_on = [aws_s3_bucket_versioning.main]
}
{{/if}}

# S3 Bucket Inventory (Optional)
{{#if enable_inventory}}
resource "aws_s3_bucket_inventory" "main" {
  bucket = aws_s3_bucket.main.id
  name   = "{{project_name}}-inventory"

  included_object_versions = "{{#if enable_versioning}}All{{else}}Current{{/if}}"

  schedule {
    frequency = "{{inventory_frequency}}"
  }

  destination {
    bucket {
      format     = "{{inventory_format}}"
      bucket_arn = "{{inventory_destination_bucket_arn}}"
      prefix     = "inventory/"

      {{#if eq encryption_type "aws:kms"}}
      encryption {
        sse_kms {
          key_id = aws_kms_key.s3.arn
        }
      }
      {{/if}}
    }
  }

  optional_fields = {{tf_list inventory_optional_fields}}
}
{{/if}}

# CloudWatch Metrics (Optional)
{{#if enable_metrics}}
resource "aws_s3_bucket_metric" "main" {
  bucket = aws_s3_bucket.main.id
  name   = "{{project_name}}-metrics"
}
{{/if}}

# Outputs
output "bucket_id" {
  description = "The name of the bucket"
  value       = aws_s3_bucket.main.id
}

output "bucket_arn" {
  description = "The ARN of the bucket"
  value       = aws_s3_bucket.main.arn
}

output "bucket_domain_name" {
  description = "The bucket domain name"
  value       = aws_s3_bucket.main.bucket_domain_name
}

output "bucket_regional_domain_name" {
  description = "The bucket region-specific domain name"
  value       = aws_s3_bucket.main.bucket_regional_domain_name
}

output "kms_key_id" {
  description = "The KMS key ID used for encryption"
  value       = aws_kms_key.s3.id
}

output "kms_key_arn" {
  description = "The KMS key ARN used for encryption"
  value       = aws_kms_key.s3.arn
}

{{#if enable_logging}}
output "logs_bucket_id" {
  description = "The name of the logging bucket"
  value       = aws_s3_bucket.logs.id
}

output "logs_bucket_arn" {
  description = "The ARN of the logging bucket"
  value       = aws_s3_bucket.logs.arn
}
{{/if}}
