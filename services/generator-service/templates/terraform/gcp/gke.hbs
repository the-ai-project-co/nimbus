{{!-- GCP GKE Cluster Template --}}
# GKE Cluster Configuration
# Generated by Nimbus

terraform {
  required_version = ">= 1.0"

  required_providers {
    google = {
      source  = "hashicorp/google"
      version = "~> 5.0"
    }
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.0"
    }
  }
}

provider "google" {
  project = var.project_id
  region  = var.region
}

# GKE Cluster
resource "google_container_cluster" "{{name}}" {
  name     = "{{name}}"
  location = "{{#if zonal}}{{zone}}{{else}}{{#if region}}{{region}}{{else}}var.region{{/if}}{{/if}}"

  # We can't create a cluster with no node pool defined, but we want to only use
  # separately managed node pools. So we create the smallest possible default
  # node pool and immediately delete it.
  remove_default_node_pool = true
  initial_node_count       = 1

  network    = {{#if vpcName}}google_compute_network.{{vpcName}}.name{{else}}var.network{{/if}}
  subnetwork = {{#if subnetName}}google_compute_subnetwork.{{subnetName}}.name{{else}}var.subnetwork{{/if}}

  {{#if privateCluster}}
  private_cluster_config {
    enable_private_nodes    = true
    enable_private_endpoint = {{#if privateEndpoint}}true{{else}}false{{/if}}
    master_ipv4_cidr_block  = "{{#if masterCidr}}{{masterCidr}}{{else}}172.16.0.0/28{{/if}}"
  }

  master_authorized_networks_config {
    {{#each authorizedNetworks}}
    cidr_blocks {
      cidr_block   = "{{cidr}}"
      display_name = "{{name}}"
    }
    {{/each}}
  }
  {{/if}}

  {{#if enableWorkloadIdentity}}
  workload_identity_config {
    workload_pool = "${var.project_id}.svc.id.goog"
  }
  {{/if}}

  {{#if binaryAuthorization}}
  binary_authorization {
    evaluation_mode = "PROJECT_SINGLETON_POLICY_ENFORCE"
  }
  {{/if}}

  # Cluster features
  {{#if enableShieldedNodes}}
  enable_shielded_nodes = true
  {{/if}}

  {{#if enableNetworkPolicy}}
  network_policy {
    enabled  = true
    provider = "CALICO"
  }
  {{/if}}

  addons_config {
    http_load_balancing {
      disabled = false
    }
    horizontal_pod_autoscaling {
      disabled = false
    }
    {{#if enableGcsFuse}}
    gcs_fuse_csi_driver_config {
      enabled = true
    }
    {{/if}}
  }

  {{#if releaseChannel}}
  release_channel {
    channel = "{{releaseChannel}}"
  }
  {{/if}}

  {{#if maintenanceWindow}}
  maintenance_policy {
    recurring_window {
      start_time = "{{maintenanceWindow.startTime}}"
      end_time   = "{{maintenanceWindow.endTime}}"
      recurrence = "{{maintenanceWindow.recurrence}}"
    }
  }
  {{/if}}

  resource_labels = var.labels

  logging_config {
    enable_components = ["SYSTEM_COMPONENTS", "WORKLOADS"]
  }

  monitoring_config {
    enable_components = ["SYSTEM_COMPONENTS"]
    managed_prometheus {
      enabled = {{#if enableManagedPrometheus}}true{{else}}false{{/if}}
    }
  }
}

{{#each nodePools}}
# Node Pool: {{name}}
resource "google_container_node_pool" "{{name}}" {
  name       = "{{name}}"
  location   = google_container_cluster.{{../name}}.location
  cluster    = google_container_cluster.{{../name}}.name

  {{#if nodeCount}}
  node_count = {{nodeCount}}
  {{else}}
  initial_node_count = {{#if initialNodeCount}}{{initialNodeCount}}{{else}}1{{/if}}

  autoscaling {
    min_node_count = {{#if minNodes}}{{minNodes}}{{else}}1{{/if}}
    max_node_count = {{#if maxNodes}}{{maxNodes}}{{else}}10{{/if}}
  }
  {{/if}}

  {{#if nodeLocations}}
  node_locations = [{{#each nodeLocations}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}]
  {{/if}}

  management {
    auto_repair  = true
    auto_upgrade = true
  }

  node_config {
    machine_type = "{{#if machineType}}{{machineType}}{{else}}e2-medium{{/if}}"

    {{#if preemptible}}
    preemptible = true
    {{/if}}

    {{#if spot}}
    spot = true
    {{/if}}

    disk_size_gb = {{#if diskSizeGb}}{{diskSizeGb}}{{else}}100{{/if}}
    disk_type    = "{{#if diskType}}{{diskType}}{{else}}pd-standard{{/if}}"

    {{#if imageType}}
    image_type = "{{imageType}}"
    {{/if}}

    oauth_scopes = [
      "https://www.googleapis.com/auth/cloud-platform"
    ]

    {{#if labels}}
    labels = {
      {{#each labels}}
      "{{@key}}" = "{{this}}"
      {{/each}}
    }
    {{/if}}

    {{#if taints}}
    {{#each taints}}
    taint {
      key    = "{{key}}"
      value  = "{{value}}"
      effect = "{{effect}}"
    }
    {{/each}}
    {{/if}}

    {{#if ../enableWorkloadIdentity}}
    workload_metadata_config {
      mode = "GKE_METADATA"
    }
    {{/if}}

    shielded_instance_config {
      enable_secure_boot          = true
      enable_integrity_monitoring = true
    }

    metadata = {
      disable-legacy-endpoints = "true"
    }
  }

  {{#if upgradeSettings}}
  upgrade_settings {
    max_surge       = {{#if upgradeSettings.maxSurge}}{{upgradeSettings.maxSurge}}{{else}}1{{/if}}
    max_unavailable = {{#if upgradeSettings.maxUnavailable}}{{upgradeSettings.maxUnavailable}}{{else}}0{{/if}}
  }
  {{/if}}
}
{{/each}}

# Variables
variable "project_id" {
  description = "GCP project ID"
  type        = string
}

variable "region" {
  description = "GCP region"
  type        = string
  default     = "{{#if region}}{{region}}{{else}}us-central1{{/if}}"
}

{{#unless vpcName}}
variable "network" {
  description = "VPC network name"
  type        = string
}

variable "subnetwork" {
  description = "VPC subnetwork name"
  type        = string
}
{{/unless}}

variable "labels" {
  description = "Labels to apply to the cluster"
  type        = map(string)
  default     = {}
}

# Outputs
output "cluster_id" {
  description = "GKE cluster ID"
  value       = google_container_cluster.{{name}}.id
}

output "cluster_name" {
  description = "GKE cluster name"
  value       = google_container_cluster.{{name}}.name
}

output "cluster_endpoint" {
  description = "GKE cluster endpoint"
  value       = google_container_cluster.{{name}}.endpoint
  sensitive   = true
}

output "cluster_ca_certificate" {
  description = "GKE cluster CA certificate"
  value       = google_container_cluster.{{name}}.master_auth[0].cluster_ca_certificate
  sensitive   = true
}

output "get_credentials_command" {
  description = "Command to get kubectl credentials"
  value       = "gcloud container clusters get-credentials {{name}} --region ${var.region} --project ${var.project_id}"
}
